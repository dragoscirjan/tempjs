{
  "name": "@mists/temp",
  "version": "0.0.2",
  "description": "Operating System Based Temporary Files and Folders",
  "main": "dist/commonjs/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c --environment NODE_ENV:production",
    "predoc": "rimraf doc",
    "doc": "npx typedoc --out doc --json doc.json --readme none --theme minimal --mode file src",
    "doc:watch": "nodemon --exec 'npm run doc'",
    "prettier": "prettier \"{src,test}/**/*.ts\"",
    "prettier:check": "npm run prettier -- --list-different",
    "prettier:write": "npm run prettier -- --write",
    "git-hook:pre-commit": "npm run prettier:write && npm run lint:write && npm run jscpd && npm run test",
    "jscpd": "jscpd ./src --blame --format typescript",
    "jscpd:html": "npm run jscpd -- --reporters html",
    "lint": "eslint ./{src,test}/**/*.ts",
    "lint:write": "npm run lint -- --fix",
    "lint:watch": "nodemon --exec \"npm run lint\"",
    "prerelease": "npm run build",
    "release": "release-it --ci --no-npm.publish",
    "test": "npm run test:single -- 'test/**/*.test.ts'",
    "test:single": "nyc --reporter=html --reporter=text --extension .ts mocha --forbid-only",
    "test:junit": "npm run test -- --reporter mocha-junit-reporter --reporter-options mochaFile=.junit.xml",
    "test:watch": "nodemon --exec 'npm run test'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mists-aside/tempjs.git"
  },
  "author": "Dragos Cirjan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mists-aside/tempjs/issues"
  },
  "homepage": "https://github.com/mists-aside/tempjs#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "@babel/register": "^7.9.0",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/chai": "^4.2.11",
    "@types/crypto-random-string": "^2.0.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.4",
    "@types/rimraf": "^3.0.0",
    "@types/shortid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-mocha": "^6.3.0",
    "jscpd": "^2.0.16",
    "jscpd-badge-reporter": "^1.1.3",
    "jsinspector": "^2.0.4",
    "mocha": "^7.1.2",
    "nodemon": "^2.0.3",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "release-it": "^13.5.8",
    "rimraf": "^3.0.2",
    "rollup": "^2.10.9",
    "rollup-plugin-dts": "^1.4.7",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-node": "^8.10.1",
    "typedoc": "^0.17.7",
    "typescript": "^3.8.3",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "npm run git-hook:pre-commit && git add ."
  },
  "dependencies": {
    "@types/bytes": "^3.1.0",
    "bytes": "^3.1.0",
    "crypto-random-string": "^3.2.0",
    "shortid": "^2.2.15"
  }
}
