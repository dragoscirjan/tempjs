{
  "name": "@mists/temp",
  "version": "0.0.6-dev.1",
  "description": "Operating System Based Temporary Files and Folders",
  "main": "dist/commonjs/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c --environment NODE_ENV:production",
    "predoc": "rimraf doc",
    "docs": "npx typedoc --out doc --json doc.json --readme none --theme minimal --mode file src",
    "docs:watch": "nodemon --exec 'npm run doc'",
    "prettier": "prettier \"{src,test}/**/*.ts\"",
    "prettier:check": "npm run prettier -- --list-different",
    "prettier:write": "npm run prettier -- --write",
    "git-hook:pre-commit": "npm run prettier:write && npm run lint:write && npm run jscpd && npm run test",
    "jscpd": "jscpd ./src --blame --format typescript",
    "jscpd:html": "npm run jscpd -- --reporters html",
    "lint": "eslint ./{src,test}/**/*.ts",
    "lint:write": "npm run lint -- --fix",
    "lint:watch": "nodemon --exec \"npm run lint\"",
    "prerelease": "npm run build",
    "release": "release-it --ci --no-npm.publish",
    "test": "npm run test:single -- 'test/**/*.test.ts'",
    "test:single": "nyc --reporter=html --reporter=lcov --reporter=text --extension .ts mocha --forbid-only",
    "test:junit": "npm run test -- --reporter mocha-junit-reporter --reporter-options mochaFile=.junit.xml",
    "test:watch": "nodemon --exec 'npm run test'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mists-aside/tempjs.git"
  },
  "author": "Dragos Cirjan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mists-aside/tempjs/issues"
  },
  "homepage": "https://github.com/mists-aside/tempjs#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.17",
    "@babel/core": "^7.12.17",
    "@babel/node": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@babel/register": "^7.12.13",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@release-it/conventional-changelog": "^2.0.1",
    "@types/chai": "^4.2.15",
    "@types/crypto-random-string": "^2.0.0",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "@types/rimraf": "^3.0.0",
    "@types/shortid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.0",
    "eslint": "^7.20.0",
    "eslint-plugin-mocha": "^8.0.0",
    "jscpd": "^3.3.23",
    "jscpd-badge-reporter": "^1.1.3",
    "jsinspector": "^2.0.4",
    "mocha": "^8.3.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "release-it": "^14.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.39.0",
    "rollup-plugin-dts": "^2.0.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.27",
    "typescript": "^4.1.5",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "npm run git-hook:pre-commit && git add .",
    "commit-msg": "commitlint -e -V"
  },
  "dependencies": {
    "@types/bytes": "^3.1.0",
    "bytes": "^3.1.0",
    "crypto-random-string": "^3.3.1",
    "shortid": "^2.2.16"
  }
}
